@using Microsoft.AspNetCore.Identity
@inject SignInManager<BeanScene.Web.Data.ApplicationUser> SignInManager
@inject UserManager<BeanScene.Web.Data.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeanScene</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    BeanScene Cafe
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Main navigation -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <!--
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                        -->

                        <!-- Add your app pages -->
                        @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Reservations"
                                   asp-action="Index">Reservations (Admin)</a>
                            </li>
                        }

                        
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                                asp-controller="Reservations"
                                asp-action="Create">Make Reservation</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SittingSchedules" asp-action="Index">
                                Sitting Schedules
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Areas" asp-action="Index">
                                Areas
                            </a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="RestaurantTables" asp-action="Index">
                            Tables
                        </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Chat" asp-action="Index">Chat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Drawing" asp-action="Index">Drawing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="DoublyLinkedList" asp-action="Index">
                                Doubly Linked List
                            </a>
                        </li>


                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Admin"
                                   asp-action="Users">Manage Users</a>
                            </li>
                        }


                    </ul>

                    <!-- Right-side Login/Register or Logout -->
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                    Hello, @User.Identity!.Name
                                </a>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                                      asp-route-returnUrl="@Url.Action("Index","Home")" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-dark">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                                    Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--
    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            &copy; @DateTime.Now.Year - BeanScene Cafe
        </div>
    </footer>
    -->
    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            <p class="mb-1">&copy; @DateTime.Now.Year - BeanScene Cafe</p>
            <a class="text-decoration-none text-muted" asp-area="" asp-controller="Home" asp-action="Privacy">
                Privacy Policy
            </a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="_framework/blazor.server.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
