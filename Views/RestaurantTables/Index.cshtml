@model IEnumerable<BeanScene.Web.Models.RestaurantTable>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TableName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area.AreaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RestaurantTableId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RestaurantTableId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RestaurantTableId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
