@model BeanScene.Web.Models.SittingSchedule

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SittingSchedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SittingScheduleId" />
            <div class="form-group">
                <label asp-for="Stype" class="control-label"></label>
                <input asp-for="Stype" class="form-control" />
                <span asp-validation-for="Stype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" type="time" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" type="time" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Scapacity" class="control-label"></label>
                <input asp-for="Scapacity" class="form-control" />
                <span asp-validation-for="Scapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Open">Open</option>
                    <option value="Closed">Closed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
